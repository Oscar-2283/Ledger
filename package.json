{
  "name": "accounting-app",
  "version": "1.0.0",
  "description": "記帳工具",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder",
    "build:win": "vite build && electron-builder --win",
    "electron:dev": "electron .",
    "start": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && npm run electron:dev\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "lucide-react": "^0.469.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.16",
    "code-inspector-plugin": "^1.3.4",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^7.3.1",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.ledger.app",
    "productName": "Ledger記帳",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "resources/**/*",
      "package.json"
    ],
    "win": {
      "target": "portable",
      "icon": "resources/icon.ico"
    },
    "portable": {
      "artifactName": "Ledger_Portable_${version}.exe"
    },
    "asarUnpack": [
      "**/*.node"
    ]
  }
}
